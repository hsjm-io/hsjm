{
  "name": "@hsjm/firebase",
  "version": "1.0.0",
  "author": "Stanley Horwood <stanley@hsjm.io>",
  "description": "Vue integration with Firebase.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsjm-io/hsjm.git",
    "directory": "/home/shorwood/workspaces/hsjm/packages/firebase"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "require": "./dist/utils/index.js",
      "import": "./dist/utils/index.mjs",
      "types": "./dist/utils/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENCE"
  ],
  "scripts": {
    "dev": "pnpm build -- --watch",
    "build": "tsup index.ts */index.ts --onSuccess 'pnpm build:post && pnpm build:lint'",
    "build:post": "esno ../../scripts/buildPost.ts",
    "build:lint": "eslint package.json --fix --no-ignore"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "firebase": ">9.0.0",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "@hsjm/core": "workspace:*",
    "@hsjm/shared": "workspace:*",
    "@vueuse/core": "^8.4.2",
    "@vueuse/shared": "^8.4.2",
    "vue-demi": "*"
  },
  "devDependencies": {
    "firebase": "^9.8.1",
    "vue": "^3.2.33"
  }
}
