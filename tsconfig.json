{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "types": [
      "@types/node",
      "@types/lodash",
      "@types/leaflet",
      "@types/eslint"
    ],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [ "src/**/*.(ts|js)" ],
  "exclude": [ "node_modules", "dist" ]
}
