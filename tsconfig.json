{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "strict": true,
    "types": [
      "@types/node",
      "@types/lodash",
      "@types/leaflet",
      "@types/eslint"
    ],
    "paths": {
      "@hsjm/core": ["./packages/core/index.ts"],
      "@hsjm/components": ["./packages/components/index.ts"],
      "@hsjm/firebase": ["./packages/firebase/index.ts"],
      "@hsjm/iconify": ["./packages/iconify/index.ts"],
      "@hsjm/leaflet": ["./packages/leaflet/index.ts"],
      "@hsjm/mapbox": ["./packages/mapbox/index.ts"],
      "@hsjm/nato": ["./packages/nato/index.ts"]
    }
  },
  "include": [
    "./packages/**/*"
  ],
  "exclude": [
    "dist"
  ]
}
