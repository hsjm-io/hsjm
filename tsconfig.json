{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": ".",
    "paths": { "~/*": ["./src/*"] },
    "typeRoots": ["@types"],
    "types": [
      "@types/node",
      "@types/lodash",
      "@types/tinycolor2"
    ]
  },
  "include": ["./src/**/*"]
}
